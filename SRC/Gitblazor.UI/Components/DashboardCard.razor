<div class="@WidthClass bg-gray-50">
    <h3 class="font-extrabold text-base">@Title</h3>
    <div class="h-1 w-full bg-gradient-to-r from-violet-700 to-gray-50 mb-2"></div>
    <div class="overflow-auto @HeightClass">
        @ChildContent
    </div>
</div>

@code {
    [Parameter]
    public string WidthClass { get; set; }
    [Parameter]
    public string HeightClass { get; set; }
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

}
